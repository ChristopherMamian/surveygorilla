<h1>Results</h1>
<h2><%= @survey.title %></h2>
  <% @questions.each do |question| %>
    <h3><%= question.question %></h3>
    <% @total = question.answers.count %>
    <% question.choices.each do |poop| %>
      <p> <%=poop.content%> : </p>
      <p> total number of votes: <%=  @answers.where(choice_id: poop.id).count %> </p>
      <p> total percent of votes: <%=  @answers.where(choice_id: poop.id).count.to_f/@total*100 %> </p>
      <br>
      <% end %>
  <% end %>
